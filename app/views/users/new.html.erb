<%= form_for @user do |f| %>
<div class="field">
      <%= f.label :user_name %>
      <%= f.text_field :user_name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

    <div class="field">
      <%= f.submit %>
    </div>
  <% end %>
</div>
