<h1>Create a Posting</h1>
<%= form_for @adpost do |f| %>
<div class="form-group">
  <label for="exampleInputTitle">Title</label>
  <%= f.text_field :title, class: 'form-control'  %>
</div>

<% @categories.each do |category| %>
<div class="form-group">
  <%= radio_button_tag(:category_id, "#{category.id}") %>
  <%= label_tag(:category_id, "#{category.name}") %>
<% end %>
</div>

<div class="form-group">
  <label for="exampleInputDescription">Description</label>
  <%= f.text_area :description, class: 'form-control'  %>
</div>

<div class="form-group">
  <label for="exampleInputPrice">Price</label>
  <%= f.number_field :price, class: 'form-control' %>
</div>

<div class="form-group">
  <label for="exampleInputImage">Image</label>
  <%= f.file_field :image, class:"form-control-file", id:"exampleFormControlFile1"%>
</div>

<div class="form-group">
  <label for="exampleInputAddress">Address</label>
  <%= f.text_area :address,class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.submit 'Post ad', class:"btn btn-primary"  %>
</div>

<% end  %>
