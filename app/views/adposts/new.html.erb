<%= form_for @adpost do |f| %>

<%= f.label :title %>
<%= f.text_field :title  %>

<% @categories.each do |category| %>
  <%= radio_button_tag(:category_id, "#{category.id}") %>
  <%= label_tag(:category_id, "#{category.name}") %>
<% end %>

<%= f.label :description  %>
<%= f.text_area :description  %>

<%= f.label :price  %>
<%= f.number_field :price %>

<%= f.label :image  %>
<%= f.file_field :image%>

<%= f.label :address %>
<%= f.text_area :address %>

<%= f.submit 'Post ad'  %>

<% end  %>
